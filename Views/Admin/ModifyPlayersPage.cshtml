@model Football.Models.PagePlayers

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">



<head>
    <meta charset=UTF-8>
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>


<script>
    tinymce.init({
        forced_root_block: false,
        selector: '#mytextarea'
    });
</script>

<body>
    <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
        <div class="position-sticky pt-3">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="ModifyPlayersPage" asp-route-id="7">
                        <span data-feather="file"></span>
                        Modify Players page
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Players" asp-action="Create">
                        <span data-feather="users"></span>
                        Add players
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <span data-feather="file"></span>
                        Modify Management page
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <span data-feather="file"></span>
                        Modify CMS page
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <span data-feather="file"></span>
                        Modify Contact page
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">

        <form method="post">
            <textarea id="mytextarea" asp-for="HtmlCOntent" >@Model.HtmlCOntent</textarea>
            <input type="submit"/>
        </form>
    </main>
</body>
</html>